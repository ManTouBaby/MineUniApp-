{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {
					"scrollIndicator": "none",
					"titleNView": {
						// 设置糗事首页搜索栏
						"searchInput": {
							"borderRadius": "4px",
							"placeholder": "搜索糗事",
							"disabled": true,
							"backgroundColor": "#F7F7F7"
						},
						// 设置左右两个图标
						"buttons": [
							// 左边签到图标
							{
								"color": "#FF961A",
								"colorPressed": "#BBBBBB",
								"fontSize": "22px",
								"float": "left",
								"fontSrc": "static/font/icon.ttf",
								"text": "\ue609"
							},
							// 右边编辑图标
							{
								"color": "#000000",
								"colorPressed": "#BBBBBB",
								"fontSize": "22px",
								"float": "right",
								"fontSrc": "static/font/icon.ttf",
								"text": "\ue653"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/dongtai/dongtai",
			"style":{
				"app-plus":{
					"bounce":"none",
					"titleNView":false
				}
			}
		},
		{
			"path": "pages/xiaozhitiao/xiaozhitiao"
		},
		{
			"path": "pages/mine/mine"
		}, {
			"path": "pages/search/search",
			"style": {
				"app-plus": {
					"titleNView": {
						"autoBackButton":false,
						"searchInput": {
							"align":"left",
							"disabled":false,
							"placeholder":"搜索糗事",
							"backgroundColor":"#F7F7F7",
							"borderRadius":"4px"
						},
						"buttons": [
							{
								"color":"#222222",
								"colorPressed":"#000000",
								"float":"right",
								"fontSize":"14px",
								"text":"取消"
							}
						]
					}
				}
			}
		}
	    ,{
            "path" : "pages/publish/publish",
            "style" : {
				"app-plus":{
					"scrollIndicator":"none",//取消默认滚动条
					"bounce":"none",//取消页面回弹阴影动画
					"titleNView":false//取消原生标题栏
				}
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "糗事百科",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"backgroundColor": "#FFFFFF",
		"color": "#B8B8B8",
		"selectedColor": "#FEE42E",
		"list": [{
				"iconPath": "static/icon-home.png",
				"selectedIconPath": "static/icon-home-select.png",
				"text": "糗事",
				"pagePath": "pages/index/index"
			},
			{
				"iconPath": "static/icon-dongtai.png",
				"selectedIconPath": "static/icon-dongtai-select.png",
				"pagePath": "pages/dongtai/dongtai",
				"text": "动态"
			}, {
				"iconPath": "static/icon-xiaozhitiao.png",
				"selectedIconPath": "static/icon-xiaozhitiao-select.png",
				"pagePath": "pages/xiaozhitiao/xiaozhitiao",
				"text": "小纸条"
			}, {
				"iconPath": "static/icon-me.png",
				"selectedIconPath": "static/icon-me-select.png",
				"pagePath": "pages/mine/mine",
				"text": "我的"
			}
		]
	}
}
